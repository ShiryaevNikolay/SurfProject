<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/bgColor</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="SnackbarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">@color/warningColor</item>
        <item name="elevation">0dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="BottomNavViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@drawable/btm_nav_view_layout</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
    </style>

    <style name="CustomAuthBtn" parent="Widget.MaterialComponents.Button">
        <item name="cardBackgroundColor">@color/colorAccent</item>
    </style>

    <style name="FavoriteCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_checkbox_favorite</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ShareCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_checkbox_share</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="ToolbarCreateMemeBtnStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="rippleColor">@color/colorAccent</item>
    </style>

    <style name="TextInputLayoutCursorStyle" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextLimitError" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/warningColor</item>
    </style>

    <style name="PopupMenuStyle" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_bg</item>
    </style>

    <style name="MyAlertDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/secondaryColor</item>
        <item name="buttonBarButtonStyle">@style/ButtonDialogStyle</item>
    </style>

    <style name="ButtonDialogStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="rippleColor">@color/ripple_effect</item>
    </style>
</resources>