<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/bgColor</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="InputLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
    </style>

    <style name="SnackbarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">@color/warningColor</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="BottomNavViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@drawable/btm_nav_view_layout</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
    </style>
</resources>